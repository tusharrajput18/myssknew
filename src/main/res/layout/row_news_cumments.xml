<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/linear_news_row"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <LinearLayout
                android:layout_marginBottom="@dimen/dimen_5"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal">

                    <de.hdodenhof.circleimageview.CircleImageView
                        android:scaleType="centerCrop"
                        android:layout_marginVertical="@dimen/dimen_5"
                        android:id="@+id/imgview_circular_row_news_commenter_profile"
                        android:layout_width="@dimen/dimen_50"
                        android:layout_height="@dimen/dimen_50"
                        android:contentDescription="@string/profile_image"
                        android:src="@drawable/img_preview"/>

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="vertical">

                    <android.support.v7.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
                        xmlns:card_view="http://schemas.android.com/apk/res-auto"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginHorizontal="@dimen/dimen_5"
                       android:layout_marginTop="@dimen/dimen_5"
                        android:clickable="true"
                        card_view:cardCornerRadius="5dp"
                        card_view:cardElevation="2dp">


                    <LinearLayout
                        android:layout_margin="@dimen/dimen_5"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="vertical">
                        <TextView
                            android:id="@+id/tv_news_row_commenter_profilename"
                            android:textStyle="bold"
                            android:ellipsize="end"
                            android:maxLines="1"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="The Indian Express"
                            android:textSize="@dimen/text_16" />

                        <TextView
                            android:id="@+id/tv_new_row_comment"
                            android:layout_marginTop="@dimen/dimen_5"
                            android:ellipsize="end"
                            android:maxLines="4"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="The Indian Express"
                            android:textSize="@dimen/text_14" />

                    </LinearLayout>

                    </android.support.v7.widget.CardView>

                        <TextView
                            android:id="@+id/tv_comment_time"
                            android:paddingLeft="@dimen/dimen_5"
                            android:textColor="@color/colorText"
                            android:layout_marginHorizontal="@dimen/dimen_5"
                            android:text="tushar"
                            android:textSize="@dimen/text_12"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"/>
                    </LinearLayout>

                </LinearLayout>

            </LinearLayout>


        </LinearLayout>





</LinearLayout>
