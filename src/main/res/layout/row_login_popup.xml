<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_margin="@dimen/dimen_10"
    app:cardElevation="@dimen/dimen_5">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="200dp"
        android:background="@color/colorHind"
        android:orientation="vertical"
        android:weightSum="1">

        <FrameLayout
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="0.4"
            android:background="@color/controlColor">

            <in.co.vsys.myssksamaj.custom_views.CustomTextViewHeading
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                
                android:gravity="center"
                android:text="@string/tag_line"
                android:textColor="@color/colorHind"
                android:textSize="@dimen/text_20"
                android:textStyle="bold" />
            
        </FrameLayout>

        <android.support.constraint.ConstraintLayout
            android:id="@+id/layout_main_constraint"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="0.6">

            <in.co.vsys.myssksamaj.custom_views.CustomTextView
                android:id="@+id/tv_rowLogin_login"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginTop="16dp"
                android:layout_marginBottom="@dimen/dimen_15"
                android:gravity="center"
                android:padding="@dimen/dimen_10"
                android:text="Login As"
                android:textColor="@color/colorBlack"
                android:textSize="@dimen/text_20"
                android:textStyle="bold"
                android:visibility="gone"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintHorizontal_bias="0.0"
                app:layout_constraintStart_toStartOf="parent" />

            <in.co.vsys.myssksamaj.custom_views.CustomTextView
                android:id="@+id/tv_rowLogin_register"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginTop="16dp"
                android:layout_marginBottom="@dimen/dimen_15"
                android:gravity="center"
                android:padding="@dimen/dimen_10"
                android:text="Register As"
                android:textColor="@color/colorBlack"
                android:textSize="@dimen/text_20"
                android:textStyle="bold"
                android:visibility="gone"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintHorizontal_bias="0.0"
                app:layout_constraintStart_toStartOf="parent" />

            <LinearLayout
                android:id="@+id/linearLayout2"
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_marginTop="8dp"
                android:layout_marginBottom="8dp"
                android:gravity="center"
                android:orientation="horizontal"
                android:padding="@dimen/dimen_10"
                android:weightSum="2"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintHorizontal_bias="0.0"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintVertical_bias="0.0">

                <in.co.vsys.myssksamaj.custom_views.CustomButton
                    android:id="@+id/btn_rowSelf"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_marginRight="@dimen/dimen_10"
                    android:layout_weight="1"
                    android:elevation="@dimen/dimen_5"
                    
                    android:text="@string/self"
                    android:textAllCaps="false"
                    android:textColor="@color/colorHind"
                    android:textSize="@dimen/text_18"
                    app:backgroundTint="@color/controlColor" />

                <in.co.vsys.myssksamaj.custom_views.CustomButton
                    android:id="@+id/btn_rowParent"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="@dimen/dimen_10"
                    android:layout_weight="1"
                    android:elevation="@dimen/dimen_5"
                    
                    android:text="@string/parent"
                    android:textAllCaps="false"
                    android:textColor="@color/controlColor"
                    android:textSize="@dimen/text_18"
                    app:backgroundTint="@color/colorHind" />

            </LinearLayout>

        </android.support.constraint.ConstraintLayout>

    </LinearLayout>

</android.support.v7.widget.CardView>