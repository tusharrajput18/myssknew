<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    android:layout_marginHorizontal="@dimen/dimen_5"
    android:layout_marginBottom="@dimen/dimen_2"
    app:cardElevation="@dimen/dimen_5">
    <LinearLayout
        android:id="@+id/linearLayout_business_list"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:padding="@dimen/dimen_10">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <ImageView
                android:layout_marginTop="@dimen/dimen_5"
                android:id="@+id/img_custom_business"
                android:layout_width="@dimen/dimen_100"
                android:layout_height="@dimen/dimen_100"
                android:src="@mipmap/ic_launcher" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:padding="@dimen/dimen_5">

                <TextView
                    android:textStyle="bold"
                    android:textColor="@color/businesstextcolor"
                    android:id="@+id/tv_business_name"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:ellipsize="end"
                    android:maxLines="1"
                    android:text="Make a preset width for your TextView and add these attributes"
                    android:textSize="@dimen/text_18" />

                <TextView
                    android:textColor="@color/businesstextcolor"
                    android:id="@+id/tv_business_discription"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:ellipsize="end"
                    android:maxLines="1"
                    android:text="Discription"
                    android:textSize="@dimen/text_14" />

                <LinearLayout
                    android:layout_marginTop="@dimen/dimen_5"
                    android:weightSum="3"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal">

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:layout_weight="2"
                        android:ellipsize="end"
                        android:maxLines="1"
                        android:text="Mobile"
                        android:textColor="@color/businesstextcolor"
                        android:textSize="@dimen/text_16" />

                    <TextView
                        android:id="@+id/tv_custom_row_business_mobile"
                        android:layout_weight="1"
                        android:textColor="@color/businesstextcolor"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:ellipsize="end"
                        android:maxLines="1"
                        android:text="8796488168"
                        android:textSize="@dimen/text_14" />
                </LinearLayout>

                <LinearLayout
                    android:weightSum="3"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal">

                    <TextView
                        android:layout_weight="2"
                        android:textColor="@color/businesstextcolor"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:ellipsize="end"
                        android:maxLines="1"
                        android:text="Address"
                        android:textSize="@dimen/text_16" />

                    <TextView
                        android:id="@+id/tv_custom_row_business_address"
                        android:layout_weight="1"
                        android:textColor="@color/businesstextcolor"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:ellipsize="end"
                        android:maxLines="1"
                        android:text="This Payment is been charged just to authenticate the real presence of an candidate after making payment you can see only  100 contacts number of candidates"
                        android:textSize="@dimen/text_14" />
                </LinearLayout>

                <LinearLayout
                    android:weightSum="3"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal">

                    <TextView
                        android:layout_weight="2"
                        android:textColor="@color/businesstextcolor"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:ellipsize="end"
                        android:maxLines="1"
                        android:text="Intro"
                        android:textSize="@dimen/text_16" />

                    <TextView
                        android:id="@+id/tv_custom_row_aboutus"
                        android:layout_weight="1"
                        android:textColor="@color/businesstextcolor"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:ellipsize="end"
                        android:maxLines="3"
                        android:text="This Payment is been charged just to authenticate the real presence of an candidate after making payment you can see only  100 contacts number of candidates"
                        android:textSize="@dimen/text_14" />
                </LinearLayout>


            </LinearLayout>
        </LinearLayout>

        <LinearLayout
            android:visibility="gone"
            android:paddingHorizontal="@dimen/dimen_10"
            android:layout_width="match_parent"
            android:layout_height="@dimen/dimen_30"
            android:layout_marginTop="@dimen/dimen_5"
            android:orientation="horizontal"
            android:weightSum="2">

            <LinearLayout
                android:layout_marginLeft="@dimen/dimen_10"
                android:layout_marginRight="@dimen/dimen_10"
                android:id="@+id/linear_business_call"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:background="@drawable/lognbuttonback"
                android:gravity="center"
                android:orientation="horizontal">

                <ImageView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:src="@drawable/ic_local_phone_black_24dp" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginRight="@dimen/dimen_5"
                    android:background="@color/white"
                    android:text="Call"
                    android:textColor="@color/colorPrimaryDark"
                    android:textSize="@dimen/text_16" />
            </LinearLayout>

            <TextView
                android:layout_marginLeft="@dimen/dimen_10"
                android:layout_marginRight="@dimen/dimen_10"
                android:id="@+id/tv_business_deals"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:background="@drawable/signupubttonback"
                android:gravity="center"
                android:onClick="click_SignUp"
                android:text="Get Best Deal"
                android:textColor="@color/white"
                android:textSize="@dimen/text_16" />
        </LinearLayout>
    </LinearLayout>
</android.support.v7.widget.CardView>