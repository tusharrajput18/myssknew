<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:padding="@dimen/dimen_10">

    <android.support.v7.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:cardCornerRadius="@dimen/dimen_2"
        app:cardElevation="@dimen/dimen_5">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:padding="@dimen/dimen_5">

                <ImageView
                    android:id="@+id/row_parcentImage"
                    android:layout_width="@dimen/dimen_70"
                    android:layout_height="@dimen/dimen_70"
                    android:src="@mipmap/ic_launcher" />

                <in.co.vsys.myssksamaj.custom_views.CustomTextView
                    android:id="@+id/row_parcentMessage"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="@dimen/dimen_10"
                    android:layout_marginTop="@dimen/dimen_10"
                    android:layout_toRightOf="@+id/row_parcentImage"
                    android:text="@string/message"
                    android:textColor="@color/colorBlack"
                    android:textSize="@dimen/text_14"
                    android:textStyle="normal" />

                <in.co.vsys.myssksamaj.custom_views.CustomTextView
                    android:id="@+id/row_parcentName"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_below="@+id/row_parcentMessage"
                    android:layout_marginLeft="@dimen/dimen_10"
                    android:layout_toRightOf="@+id/row_parcentImage"
                    android:text="Shubham Patil"
                    android:textColor="@color/colorBlack"
                    android:textSize="@dimen/text_16"
                    android:textStyle="normal|bold" />

            </RelativeLayout>

            <in.co.vsys.myssksamaj.custom_views.CustomTextView
                android:id="@+id/row_percent_totalProgress"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="@dimen/dimen_10"
                android:layout_marginLeft="@dimen/dimen_10"
                android:fontFamily="serif"
                android:text="Your profile 52% completed so far"
                android:textColor="@color/colorBlack"
                android:textSize="@dimen/text_16" />

            <ProgressBar
                android:id="@+id/row_percentProgressBar"
                style="?android:attr/progressBarStyleHorizontal"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="@dimen/dimen_10"
                android:layout_marginEnd="@dimen/dimen_10"
                android:layout_marginStart="@dimen/dimen_10"
                android:max="100"
                android:maxHeight="10dp"
                android:minHeight="20dp"
                android:progressDrawable="@drawable/bg_horizontal_progress_bar" />

            <in.co.vsys.myssksamaj.custom_views.CustomTextView
                android:id="@+id/row_percent_list"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="@dimen/dimen_10"
                android:layout_marginEnd="@dimen/dimen_10"
                android:layout_marginStart="@dimen/dimen_10"
                android:background="#F0F0F0"
                android:padding="@dimen/dimen_10"
                android:textSize="@dimen/text_14" />

            <in.co.vsys.myssksamaj.custom_views.CustomTextView
                android:id="@+id/row_percent_close"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_marginBottom="@dimen/dimen_10"
                android:layout_marginTop="@dimen/dimen_5"
                android:background="@drawable/bg_border_text"
                android:fontFamily="serif"
                android:paddingBottom="@dimen/dimen_2"
                android:paddingEnd="@dimen/dimen_10"
                android:paddingStart="@dimen/dimen_10"
                android:paddingTop="@dimen/dimen_2"
                android:text="@string/close"
                android:textColor="@color/colorHind" />

        </LinearLayout>

    </android.support.v7.widget.CardView>


</LinearLayout>