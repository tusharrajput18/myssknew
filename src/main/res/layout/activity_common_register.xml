<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".CommonRegisterActivity">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">
        <android.support.v7.widget.Toolbar
            android:id="@+id/common_regis_toolbar"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@color/colorPrimary"
            android:elevation="@dimen/dimen_5"
            android:minHeight="?attr/actionBarSize"
            android:theme="@style/ThemeOverlay.AppCompat.Light">

        </android.support.v7.widget.Toolbar>

        <FrameLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="vertical">

                <ScrollView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="vertical">

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:layout_marginHorizontal="20dp"
                            android:layout_marginTop="10dp"
                            android:background="@drawable/rectangle"
                            android:orientation="vertical">

                            <android.support.design.widget.TextInputLayout
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content">

                                <android.support.design.widget.TextInputEditText
                                    android:id="@+id/et_common_first_name"
                                    android:layout_width="match_parent"
                                    android:layout_height="wrap_content"
                                    android:layout_marginHorizontal="@dimen/dimen_20"
                                    android:layout_marginVertical="@dimen/dimen_5"
                                    android:background="@null"
                                    android:hint="First Name*"
                                    android:inputType="text"
                                    android:padding="5dp"
                                    android:textSize="@dimen/text_16" />

                            </android.support.design.widget.TextInputLayout>

                            <View
                                android:layout_width="match_parent"
                                android:layout_height="1dp"
                                android:layout_margin="5dp"
                                android:background="@color/black_font5" />

                            <android.support.design.widget.TextInputLayout
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content">

                                <android.support.design.widget.TextInputEditText
                                    android:id="@+id/et_common_middle_name"
                                    android:layout_width="match_parent"
                                    android:layout_height="wrap_content"
                                    android:layout_marginHorizontal="@dimen/dimen_20"
                                    android:layout_marginVertical="@dimen/dimen_5"
                                    android:background="@null"
                                    android:hint="Middle Name"
                                    android:inputType="text"
                                    android:padding="5dp"
                                    android:textSize="@dimen/text_16" />

                            </android.support.design.widget.TextInputLayout>

                            <View
                                android:layout_width="match_parent"
                                android:layout_height="1dp"
                                android:layout_margin="5dp"
                                android:background="@color/black_font5" />

                            <android.support.design.widget.TextInputLayout
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content">

                                <android.support.design.widget.TextInputEditText
                                    android:id="@+id/et_common_reister_last_name"
                                    android:layout_width="match_parent"
                                    android:layout_height="wrap_content"
                                    android:layout_marginHorizontal="@dimen/dimen_20"
                                    android:layout_marginVertical="@dimen/dimen_5"
                                    android:background="@null"
                                    android:hint="Last Name"
                                    android:inputType="text"
                                    android:padding="5dp"
                                    android:textSize="@dimen/text_16" />

                            </android.support.design.widget.TextInputLayout>

                            <View
                                android:layout_width="match_parent"
                                android:layout_height="1dp"
                                android:layout_margin="5dp"
                                android:background="@color/black_font5" />

                            <android.support.design.widget.TextInputLayout
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content">

                                <android.support.design.widget.TextInputEditText
                                    android:id="@+id/et_common_mobile_no"
                                    android:layout_width="match_parent"
                                    android:layout_height="wrap_content"
                                    android:layout_marginHorizontal="@dimen/dimen_20"
                                    android:layout_marginVertical="@dimen/dimen_5"
                                    android:background="@null"
                                    android:hint="Mobile no"
                                    android:inputType="number"
                                    android:maxLength="10"
                                    android:padding="5dp"
                                    android:textSize="@dimen/text_16" />

                            </android.support.design.widget.TextInputLayout>

                            <View
                                android:layout_width="match_parent"
                                android:layout_height="1dp"
                                android:layout_margin="5dp"
                                android:background="@color/black_font5" />

                            <android.support.design.widget.TextInputLayout
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content">

                                <android.support.design.widget.TextInputEditText
                                    android:id="@+id/et_common_email"
                                    android:layout_width="match_parent"
                                    android:layout_height="wrap_content"
                                    android:layout_marginHorizontal="@dimen/dimen_20"
                                    android:layout_marginVertical="@dimen/dimen_5"
                                    android:background="@null"
                                    android:hint="E-mail id"
                                    android:inputType="textEmailAddress"
                                    android:padding="5dp"
                                    android:textSize="@dimen/text_16" />

                            </android.support.design.widget.TextInputLayout>

                            <View
                                android:layout_width="match_parent"
                                android:layout_height="1dp"
                                android:layout_margin="5dp"
                                android:background="@color/black_font5" />

                            <android.support.design.widget.TextInputLayout
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content">

                                <TextView
                                    android:id="@+id/tv_common_country"
                                    android:layout_width="match_parent"
                                    android:layout_height="wrap_content"
                                    android:layout_marginHorizontal="@dimen/dimen_20"
                                    android:layout_marginVertical="@dimen/dimen_5"
                                    android:background="@null"
                                    android:hint="Country*"
                                    android:inputType="textEmailAddress"
                                    android:padding="5dp"
                                    android:textSize="@dimen/text_16" />

                            </android.support.design.widget.TextInputLayout>

                            <View
                                android:layout_width="match_parent"
                                android:layout_height="1dp"
                                android:layout_margin="5dp"
                                android:background="@color/black_font5" />

                            <android.support.design.widget.TextInputLayout
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content">

                                <TextView
                                    android:id="@+id/tv_common_state"
                                    android:layout_width="match_parent"
                                    android:layout_height="wrap_content"
                                    android:layout_marginHorizontal="@dimen/dimen_20"
                                    android:layout_marginVertical="@dimen/dimen_5"
                                    android:background="@null"
                                    android:hint="State*"
                                    android:inputType="textEmailAddress"
                                    android:padding="5dp"
                                    android:textSize="@dimen/text_16" />

                            </android.support.design.widget.TextInputLayout>

                            <View
                                android:layout_width="match_parent"
                                android:layout_height="1dp"
                                android:layout_margin="5dp"
                                android:background="@color/black_font5" />

                            <android.support.design.widget.TextInputLayout
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content">

                                <TextView
                                    android:id="@+id/tv_common_city"
                                    android:layout_width="match_parent"
                                    android:layout_height="wrap_content"
                                    android:layout_marginHorizontal="@dimen/dimen_20"
                                    android:layout_marginVertical="@dimen/dimen_5"
                                    android:background="@null"
                                    android:hint="City*"
                                    android:inputType="textEmailAddress"
                                    android:padding="5dp"
                                    android:textSize="@dimen/text_16" />

                            </android.support.design.widget.TextInputLayout>


                            <View
                                android:layout_width="match_parent"
                                android:layout_height="1dp"
                                android:layout_margin="5dp"
                                android:background="@color/black_font5" />

                            <android.support.design.widget.TextInputLayout
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content">

                                <android.support.design.widget.TextInputEditText
                                    android:id="@+id/et_common_address"
                                    android:layout_width="match_parent"
                                    android:layout_height="wrap_content"
                                    android:layout_marginHorizontal="@dimen/dimen_20"
                                    android:layout_marginVertical="@dimen/dimen_5"
                                    android:background="@null"
                                    android:hint="Address"
                                    android:inputType="text"
                                    android:padding="5dp"
                                    android:textSize="@dimen/text_16" />

                            </android.support.design.widget.TextInputLayout>

                            <View
                                android:layout_width="match_parent"
                                android:layout_height="1dp"
                                android:layout_margin="5dp"
                                android:background="@color/black_font5" />

                            <android.support.design.widget.TextInputLayout
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                app:hintTextAppearance="@style/TextHint"
                                app:passwordToggleEnabled="true"
                                app:passwordToggleTint="@color/colorBlack">

                                <in.co.vsys.myssksamaj.custom_views.CustomEditText
                                    android:background="@null"
                                    android:layout_marginHorizontal="@dimen/dimen_20"
                                    android:layout_marginVertical="@dimen/dimen_5"
                                    android:id="@+id/et_common_password"
                                    android:layout_width="match_parent"
                                    android:layout_height="wrap_content"
                                    android:drawableLeft="@drawable/ic_profile_password"
                                    android:hint="Enter Password"
                                    android:inputType="textPassword"
                                    android:textColor="@color/colorBlack"
                                    app:backgroundTint="@color/colorHint" />

                            </android.support.design.widget.TextInputLayout>

                            <View
                                android:layout_width="match_parent"
                                android:layout_height="1dp"
                                android:layout_margin="5dp"
                                android:background="@color/black_font5" />

                            <android.support.design.widget.TextInputLayout
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                app:hintTextAppearance="@style/TextHint"
                                app:passwordToggleEnabled="true"
                                app:passwordToggleTint="@color/colorBlack">

                                <in.co.vsys.myssksamaj.custom_views.CustomEditText
                                    android:background="@null"
                                    android:layout_marginHorizontal="@dimen/dimen_20"
                                    android:layout_marginVertical="@dimen/dimen_5"
                                    android:id="@+id/et_common_confirm_password"
                                    android:layout_width="match_parent"
                                    android:layout_height="wrap_content"
                                    android:drawableLeft="@drawable/ic_profile_password"
                                    android:hint="Confirm Password"
                                    android:inputType="textPassword"
                                    android:textColor="@color/colorBlack"
                                    app:backgroundTint="@color/colorHint" />

                            </android.support.design.widget.TextInputLayout>

                            <View
                                android:layout_width="match_parent"
                                android:layout_height="1dp"
                                android:layout_margin="5dp"
                                android:background="@color/black_font5" />


                            <RelativeLayout
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:layout_marginBottom="@dimen/dimen_10"
                                android:layout_marginTop="@dimen/dimen_10"
                                android:background="@drawable/bg_border"
                                android:padding="@dimen/dimen_10">

                                <in.co.vsys.myssksamaj.custom_views.CustomTextView
                                    android:id="@+id/tv_kundli"
                                    android:layout_width="match_parent"
                                    android:layout_height="wrap_content"
                                    android:text="@string/parent_profile_picture"
                                    android:textColor="@color/colorBlack"
                                    android:textSize="@dimen/text_18" />

                                <ImageView
                                    android:id="@+id/common_register_profile"
                                    android:layout_width="100dp"
                                    android:layout_height="100dp"
                                    android:layout_below="@id/tv_kundli"
                                    android:layout_centerInParent="true"
                                    android:layout_marginTop="@dimen/dimen_10"
                                    android:contentDescription="@string/camera"
                                    android:src="@drawable/id_preview" />

                            </RelativeLayout>

                            <RelativeLayout
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:layout_marginBottom="@dimen/dimen_10"
                                android:layout_marginTop="@dimen/dimen_10"
                                android:background="@drawable/bg_border"
                                android:padding="@dimen/dimen_10">

                                <in.co.vsys.myssksamaj.custom_views.CustomTextView
                                    android:id="@+id/tv_profile_picture_name"
                                    android:layout_width="match_parent"
                                    android:layout_height="wrap_content"
                                    android:text="@string/upload_id_proof"
                                    android:textColor="@color/colorBlack"
                                    android:textSize="@dimen/text_18" />

                                <ImageView
                                    android:id="@+id/common_register_adhar"
                                    android:layout_width="100dp"
                                    android:layout_height="100dp"
                                    android:layout_below="@id/tv_profile_picture_name"
                                    android:layout_centerInParent="true"
                                    android:layout_marginTop="@dimen/dimen_10"
                                    android:contentDescription="@string/camera"
                                    android:src="@drawable/id_preview" />

                            </RelativeLayout>



                            <TextView
                                android:id="@+id/btn_common_register_insert"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:layout_centerInParent="true"
                                android:background="@drawable/rounded_bg"
                                android:gravity="center"
                                android:padding="@dimen/dimen_15"
                                android:text="Continue"
                                android:textColor="@color/white"
                                android:textSize="@dimen/text_16" />
                        </LinearLayout>
                    </LinearLayout>
                </ScrollView>

            </LinearLayout>

            <ProgressBar
                android:visibility="gone"
                android:layout_gravity="center"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/common_register_progress"/>
        </FrameLayout>

    </LinearLayout>

</android.support.constraint.ConstraintLayout>