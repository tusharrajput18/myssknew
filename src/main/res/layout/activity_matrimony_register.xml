<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/layout_parentRegister"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/colorHind"
    tools:context=".maindirectory.ParentRegisterActivity">

    <android.support.v7.widget.Toolbar
        android:id="@+id/toolbar_matrimonyRegister"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/colorPrimary"
        android:elevation="@dimen/dimen_5"
        android:minHeight="?attr/actionBarSize"
        android:theme="@style/ThemeOverlay.AppCompat.Light">

    </android.support.v7.widget.Toolbar>

    <android.support.v7.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/toolbar_matrimonyRegister"
        android:layout_margin="@dimen/dimen_20"
        app:cardCornerRadius="@dimen/dimen_2"
        app:cardElevation="@dimen/dimen_5">

        <ScrollView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:scrollbars="vertical">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="@dimen/dimen_20"
                android:layout_marginEnd="@dimen/dimen_20"
                android:layout_marginStart="@dimen/dimen_20"
                android:layout_marginTop="@dimen/dimen_10"
                android:orientation="vertical">

                <android.support.design.widget.TextInputLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    app:hintTextAppearance="@style/TextHint">

                    <in.co.vsys.myssksamaj.custom_views.CustomEditText
                        android:id="@+id/edt_parentRegFirstName"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:drawablePadding="@dimen/dimen_5"
                        android:drawableLeft="@drawable/ic_profile_user"
                        android:hint="@string/first_name"
                        android:inputType="textCapWords"
                        android:padding="@dimen/dimen_10"
                        android:textColor="@color/colorBlack"
                        app:backgroundTint="@color/colorHint" />

                </android.support.design.widget.TextInputLayout>


                <android.support.design.widget.TextInputLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/dimen_5"
                    app:hintTextAppearance="@style/TextHint">

                    <in.co.vsys.myssksamaj.custom_views.CustomEditText
                        android:id="@+id/edt_parentRegLastName"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:drawablePadding="@dimen/dimen_5"
                        android:drawableLeft="@drawable/ic_profile_user"
                        android:hint="@string/last_name"
                        android:inputType="textCapWords"
                        android:padding="@dimen/dimen_10"
                        android:textColor="@color/colorBlack"
                        app:backgroundTint="@color/colorHint" />
                </android.support.design.widget.TextInputLayout>

                <in.co.vsys.myssksamaj.custom_views.CustomTextView
                    android:id="@+id/tv_matroRegDOB"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/dimen_10"
                    android:background="@drawable/bg_border"
                    android:drawableLeft="@drawable/ic_profile_date"
                    android:drawablePadding="@dimen/dimen_5"
                    android:gravity="start|center"
                    android:hint="@string/date_of_birth"
                    android:padding="@dimen/dimen_10"
                    android:textColor="@color/colorBlack"
                    android:textColorHint="@color/colorHint"
                    android:textSize="17sp" />

                <android.support.design.widget.TextInputLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/dimen_5"
                    app:hintTextAppearance="@style/TextHint">

                    <in.co.vsys.myssksamaj.custom_views.CustomEditText
                        android:maxLength="10"
                        android:id="@+id/edt_parentRegMobile"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:drawablePadding="@dimen/dimen_5"
                        android:drawableLeft="@drawable/ic_profile_phone"
                        android:hint="@string/mobile_number"
                        android:inputType="phone"
                        android:padding="@dimen/dimen_10"
                        android:textColor="@color/colorBlack"
                        app:backgroundTint="@color/colorHint" />
                </android.support.design.widget.TextInputLayout>

                <android.support.design.widget.TextInputLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="@dimen/dimen_10"
                    android:layout_marginTop="@dimen/dimen_5"
                    app:hintTextAppearance="@style/TextHint">

                    <in.co.vsys.myssksamaj.custom_views.CustomEditText
                        android:id="@+id/edt_parentRegEmailId"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:drawablePadding="@dimen/dimen_5"
                        android:drawableLeft="@drawable/ic_profile_email"
                        android:hint="@string/email_id"
                        android:inputType="textEmailAddress"
                        android:padding="@dimen/dimen_10"
                        android:textColor="@color/colorBlack"
                        app:backgroundTint="@color/colorHint" />

                </android.support.design.widget.TextInputLayout>


                <RelativeLayout
                    android:id="@+id/MatroBasicCasteLayout"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:visibility="gone"
                    android:layout_marginBottom="@dimen/dimen_10"
                    android:background="@drawable/bg_border"
                    android:padding="@dimen/dimen_10">

                    <in.co.vsys.myssksamaj.custom_views.CustomTextView
                        android:id="@+id/tv_matroBasicCaste"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_alignParentLeft="true"
                        android:layout_centerInParent="true"
                        android:drawablePadding="@dimen/dimen_5"
                        android:drawableLeft="@drawable/ic_profile_location"
                        android:hint="@string/cast"
                        android:textColor="@color/colorBlack"
                        android:textColorHint="@color/colorHint"
                        android:textSize="@dimen/text_18" />


                </RelativeLayout>

                <RelativeLayout
                    android:id="@+id/MatroBasicSubCasteLayout"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="@dimen/dimen_10"
                    android:visibility="gone"
                    android:background="@drawable/bg_border"
                    android:padding="@dimen/dimen_10">

                    <in.co.vsys.myssksamaj.custom_views.CustomTextView
                        android:id="@+id/tv_matroBasicSubCaste"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_alignParentLeft="true"
                        android:layout_centerInParent="true"
                        android:drawablePadding="@dimen/dimen_5"
                        android:drawableLeft="@drawable/ic_profile_location"
                        android:hint="@string/sub_caste"
                        android:textColor="@color/colorBlack"
                        android:textColorHint="@color/colorHint"
                        android:textSize="@dimen/text_18" />


                </RelativeLayout>

                <RelativeLayout
                    android:id="@+id/MatroBasicCountryLayout"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="@dimen/dimen_10"
                    android:background="@drawable/bg_border"
                    android:padding="@dimen/dimen_10">

                    <in.co.vsys.myssksamaj.custom_views.CustomTextView
                        android:id="@+id/tv_matroBasicCountry"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_alignParentLeft="true"
                        android:layout_centerInParent="true"
                        android:drawablePadding="@dimen/dimen_5"
                        android:drawableLeft="@drawable/ic_profile_location"
                        android:hint="@string/country"
                        android:textColor="@color/colorBlack"
                        android:textColorHint="@color/colorHint"
                        android:textSize="@dimen/text_18" />


                </RelativeLayout>

                <RelativeLayout
                    android:id="@+id/matroBasicstateLayout"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="@dimen/dimen_10"
                    android:background="@drawable/bg_border"
                    android:padding="@dimen/dimen_10">

                    <in.co.vsys.myssksamaj.custom_views.CustomTextView
                        android:id="@+id/tv_matroBasicState"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_alignParentLeft="true"
                        android:layout_centerInParent="true"
                        android:drawablePadding="@dimen/dimen_5"
                        android:drawableLeft="@drawable/ic_profile_location"
                        android:hint="@string/state"
                        android:textColor="@color/colorBlack"
                        android:textColorHint="@color/colorHint"
                        android:textSize="@dimen/text_18" />


                </RelativeLayout>

                <RelativeLayout
                    android:id="@+id/matroBasiccityLayout"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:background="@drawable/bg_border"
                    android:padding="@dimen/dimen_10">

                    <in.co.vsys.myssksamaj.custom_views.CustomTextView
                        android:id="@+id/tv_matroBasicCity"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_alignParentLeft="true"
                        android:layout_centerInParent="true"
                        android:drawablePadding="@dimen/dimen_5"
                        android:drawableLeft="@drawable/ic_profile_location"
                        android:hint="@string/city"
                        android:textColor="@color/colorBlack"
                        android:textColorHint="@color/colorHint"
                        android:textSize="@dimen/text_18" />

                </RelativeLayout>

                <android.support.design.widget.TextInputLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/dimen_5"
                    app:hintTextAppearance="@style/TextHint">

                    <in.co.vsys.myssksamaj.custom_views.CustomEditText
                        android:id="@+id/edt_parentRegAddress"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:drawablePadding="@dimen/dimen_5"
                        android:drawableLeft="@drawable/ic_profile_location"
                        android:hint="@string/address"
                        android:inputType="text"
                        android:padding="@dimen/dimen_10"
                        android:textColor="@color/colorBlack"
                        app:backgroundTint="@color/colorHint" />

                </android.support.design.widget.TextInputLayout>

                <android.support.design.widget.TextInputLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/dimen_5"
                    app:hintTextAppearance="@style/TextHint"
                    app:passwordToggleEnabled="true"
                    app:passwordToggleTint="@color/colorBlack">


                    <in.co.vsys.myssksamaj.custom_views.CustomEditText
                        android:id="@+id/edt_parentRegPass"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:drawablePadding="@dimen/dimen_5"
                        android:drawableLeft="@drawable/ic_profile_password"
                        android:hint="@string/password"
                        android:inputType="textPassword"
                        android:padding="@dimen/dimen_10"
                        android:textColor="@color/colorBlack"
                        app:backgroundTint="@color/colorHint" />

                </android.support.design.widget.TextInputLayout>

                <android.support.design.widget.TextInputLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/dimen_5"
                    app:hintTextAppearance="@style/TextHint"
                    app:passwordToggleEnabled="true"
                    app:passwordToggleTint="@color/colorBlack">


                    <in.co.vsys.myssksamaj.custom_views.CustomEditText
                        android:id="@+id/edt_parentRegConfirmPass"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:drawablePadding="@dimen/dimen_5"
                        android:drawableLeft="@drawable/ic_profile_password"
                        android:hint="@string/confirm_password"
                        android:inputType="textPassword"
                        android:padding="@dimen/dimen_10"
                        android:textColor="@color/colorBlack"
                        app:backgroundTint="@color/colorHint" />

                </android.support.design.widget.TextInputLayout>



                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="@dimen/dimen_10"
                    android:layout_marginTop="@dimen/dimen_10"
                    android:background="@drawable/bg_border"
                    android:padding="@dimen/dimen_10">

                    <in.co.vsys.myssksamaj.custom_views.CustomTextView
                        android:id="@+id/tv_kundli"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="@string/parent_profile_picture"
                        android:textColor="@color/colorBlack"
                        android:textSize="@dimen/text_18" />

                    <ImageView
                        android:id="@+id/img_parentCamera"
                        android:layout_width="100dp"
                        android:layout_height="100dp"
                        android:layout_below="@id/tv_kundli"
                        android:layout_centerInParent="true"
                        android:layout_marginTop="@dimen/dimen_10"
                        android:contentDescription="@string/camera"
                        android:src="@drawable/id_preview" />

                </RelativeLayout>

                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="@dimen/dimen_10"
                    android:layout_marginTop="@dimen/dimen_10"
                    android:background="@drawable/bg_border"
                    android:padding="@dimen/dimen_10">

                    <in.co.vsys.myssksamaj.custom_views.CustomTextView
                        android:id="@+id/tv_profile_picture_name"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="@string/upload_id_proof"
                        android:textColor="@color/colorBlack"
                        android:textSize="@dimen/text_18" />

                    <ImageView
                        android:id="@+id/img_parent_id_Camera"
                        android:layout_width="100dp"
                        android:layout_height="100dp"
                        android:layout_below="@id/tv_profile_picture_name"
                        android:layout_centerInParent="true"
                        android:layout_marginTop="@dimen/dimen_10"
                        android:contentDescription="@string/camera"
                        android:src="@drawable/id_preview" />

                </RelativeLayout>

                <in.co.vsys.myssksamaj.custom_views.CustomButton
                    android:id="@+id/btn_parentRegister"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:layout_marginBottom="@dimen/dimen_20"
                    android:layout_marginEnd="@dimen/dimen_10"
                    android:layout_marginStart="@dimen/dimen_10"
                    android:layout_marginTop="@dimen/dimen_20"
                    android:background="@color/controlColor"
                    android:gravity="center"
                    android:text="@string/register"
                    android:textColor="@color/colorHind"
                    android:textSize="@dimen/text_18" />

            </LinearLayout>

        </ScrollView>

    </android.support.v7.widget.CardView>


    <ProgressBar
        android:id="@+id/progressBar_parentRegister"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerInParent="true"
        android:visibility="gone" />


</RelativeLayout>