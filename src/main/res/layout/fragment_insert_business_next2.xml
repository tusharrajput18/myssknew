<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    android:layout_marginTop="?actionBarSize"
    xmlns:android="http://schemas.android.com/apk/res/android" android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingHorizontal="@dimen/dimen_10">
    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">

            <ScrollView
                android:layout_width="match_parent"
                android:layout_height="match_parent">
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:orientation="vertical">
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:orientation="vertical"
                        android:background="@drawable/rectangle"
                        android:layout_marginHorizontal="20dp"
                        android:layout_marginTop="10dp">

                        <android.support.design.widget.TextInputLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content">

                            <TextView
                                android:id="@+id/tv_business_category"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:padding="@dimen/dimen_5"
                                android:inputType="textMultiLine"
                                android:maxLines="15"
                                android:background="@null"
                                android:hint="Select Category"
                                android:layout_marginVertical="@dimen/dimen_5"
                                android:layout_marginHorizontal="@dimen/dimen_20"
                                android:textSize="@dimen/text_16" />

                        </android.support.design.widget.TextInputLayout>

                        <View
                            android:layout_width="match_parent"
                            android:layout_height="1dp"
                            android:layout_margin="5dp"
                            android:background="@color/black_font5" />
                        <android.support.design.widget.TextInputLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content">

                            <TextView
                                android:id="@+id/tv_business_subcategory"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:padding="@dimen/dimen_5"
                                android:inputType="textMultiLine"
                                android:maxLines="15"
                                android:background="@null"
                                android:hint="Select Subcategory"
                                android:layout_marginVertical="@dimen/dimen_5"
                                android:layout_marginHorizontal="@dimen/dimen_20"
                                android:textSize="@dimen/text_16" />

                        </android.support.design.widget.TextInputLayout>
                        <View
                            android:layout_width="match_parent"
                            android:layout_height="1dp"
                            android:layout_margin="5dp"
                            android:background="@color/black_font5" />
                        <android.support.design.widget.TextInputLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content">

                            <TextView
                                android:id="@+id/tv_business_product"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:padding="@dimen/dimen_5"
                                android:inputType="textMultiLine"
                                android:maxLines="15"
                                android:background="@null"
                                android:hint="Select Products"
                                android:layout_marginVertical="@dimen/dimen_5"
                                android:layout_marginHorizontal="@dimen/dimen_20"
                                android:textSize="@dimen/text_16" />

                        </android.support.design.widget.TextInputLayout>
                        <View
                            android:layout_width="match_parent"
                            android:layout_height="1dp"
                            android:layout_margin="5dp"
                            android:background="@color/black_font5" />

                        <android.support.design.widget.TextInputLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content">

                            <android.support.design.widget.TextInputEditText
                                android:id="@+id/et_aboutcompany"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:padding="@dimen/dimen_5"
                                android:inputType="textMultiLine"
                                android:maxLines="15"
                                android:background="@null"
                                android:hint="About Company"
                                android:layout_marginVertical="@dimen/dimen_5"
                                android:layout_marginHorizontal="@dimen/dimen_20"
                                android:textSize="@dimen/text_16" />

                        </android.support.design.widget.TextInputLayout>
                        <View
                            android:layout_width="match_parent"
                            android:layout_height="1dp"
                            android:layout_margin="5dp"
                            android:background="@color/black_font5" />


                        <android.support.design.widget.TextInputLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content">

                            <android.support.design.widget.TextInputEditText
                                android:id="@+id/et_aboutproductservice"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:padding="@dimen/dimen_5"
                                android:inputType="textMultiLine"
                                android:maxLines="15"
                                android:background="@null"
                                android:hint="Discription"
                                android:layout_marginVertical="@dimen/dimen_5"
                                android:layout_marginHorizontal="@dimen/dimen_20"
                                android:textSize="@dimen/text_16" />

                        </android.support.design.widget.TextInputLayout>
                        <View
                            android:layout_width="match_parent"
                            android:layout_height="1dp"
                            android:layout_margin="5dp"
                            android:background="@color/black_font5" />

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:orientation="horizontal"
                            android:layout_marginVertical="10dp"
                            android:visibility="visible">
                            <LinearLayout
                                android:id="@+id/ll_selectimage"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_marginHorizontal="@dimen/dimen_15"
                                android:layout_marginTop="@dimen/dimen_10"
                                android:orientation="vertical">
                                <ImageView
                                    android:layout_width="40dp"
                                    android:layout_height="40dp"
                                    android:layout_gravity="center"
                                    android:layout_marginTop="@dimen/dimen_5"
                                    android:src="@drawable/ic_plussign" />

                                <TextView
                                    android:layout_width="75dp"
                                    android:layout_height="wrap_content"
                                    android:layout_gravity="center"
                                    android:layout_marginTop="@dimen/dimen_5"
                                    android:gravity="center"
                                    android:padding="5dp"
                                    android:text="Add Photos(Optional)"
                                    android:textSize="@dimen/text_12" />
                            </LinearLayout>
                            <LinearLayout
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:layout_gravity="center"
                                android:orientation="horizontal">
                                <android.support.v7.widget.RecyclerView
                                    android:id="@+id/rvData"
                                    android:layout_width="match_parent"
                                    android:layout_height="wrap_content"
                                    android:layout_gravity="center" />
                            </LinearLayout>
                        </LinearLayout>

                    </LinearLayout>
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:orientation="vertical"
                        android:layout_gravity="bottom"
                        android:layout_margin="20dp"
                        android:gravity="bottom">
                        <TextView
                            android:id="@+id/tv_continue"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:textSize="@dimen/text_16"
                            android:text="Continue"
                            android:gravity="center"
                            android:layout_centerInParent="true"
                            android:padding="@dimen/dimen_15"
                            android:textColor="@color/white"
                            android:background="@drawable/rounded_bg" />

                    </LinearLayout>

                </LinearLayout>
            </ScrollView>




        </LinearLayout>

        <ProgressBar
            android:visibility="gone"
            android:layout_gravity="center_horizontal|center_vertical"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/progressbar_business_frag2"/>
    </FrameLayout>

</LinearLayout>