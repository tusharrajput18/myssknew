<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical">
    <android.support.v7.widget.CardView
        android:layout_marginTop="@dimen/dimen_2"
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:card_view="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="5dp"
        card_view:cardBackgroundColor="#ffff"
        android:foreground="?selectableItemBackground"
        android:layout_marginHorizontal="@dimen/dimen_10"
        android:layout_marginVertical="@dimen/dimen_5"
        card_view:cardCornerRadius="15dp"
        card_view:cardElevation="2dp"
        android:clickable="true" >

      <!--  card_view:cardCornerRadius="15dp"-->

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">
            <LinearLayout
                android:layout_marginTop="@dimen/dimen_10"
                android:layout_marginBottom="@dimen/dimen_5"
                android:background="@color/colorHind"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">
                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:orientation="horizontal">
                    <ImageView
                        android:id="@+id/news_small_imageview"
                        android:layout_width="0dp"
                        android:layout_height="30dp"
                        android:layout_gravity="left"
                        android:layout_marginLeft="@dimen/dimen_15"
                        android:layout_weight="0.1"
                        android:src="@mipmap/ic_launcher"/>
                    <TextView
                        android:id="@+id/tv_advertiser_name"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center"
                        android:layout_marginHorizontal="@dimen/dimen_5"
                        android:layout_weight="1"
                        android:ellipsize="end"
                        android:gravity="left"
                        android:maxLines="2"
                        android:text="The Indian Express"
                        android:textColor="@color/colorBlack"
                        android:textSize="@dimen/text_12" />
                </LinearLayout>
                <LinearLayout
                    android:visibility="gone"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="0.3"
                    android:layout_gravity="center"
                    android:gravity="right"
                    android:layout_marginRight="@dimen/dimen_20"
                    android:orientation="horizontal">
                    <ImageView
                        android:layout_width="20dp"
                        android:layout_height="20dp"
                        android:layout_gravity="right"
                        android:src="@drawable/ic_headphones"/>

                </LinearLayout>
            </LinearLayout>

            <TextView
                android:id="@+id/news_short_discription"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginHorizontal="@dimen/dimen_15"
                android:ellipsize="end"
                android:maxLines="2"
                android:text="4 hours"
                android:textColor="@color/color_black"
                android:textSize="@dimen/text_18" />

            <ImageView
                android:src="@mipmap/ic_launcher"
                android:id="@+id/news_large_imageview"
                android:layout_width="match_parent"
                android:layout_height="@dimen/dimen_150"/>

            <TextView
                android:layout_marginBottom="@dimen/dimen_5"
                android:ellipsize="end"
                android:maxLines="4"
                android:id="@+id/news_long_discription"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="4 hours"
                android:layout_marginLeft="@dimen/dimen_5"
                android:textSize="@dimen/text_14"/>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <ImageView
                    android:layout_width="25dp"
                    android:layout_height="25dp"
                    android:layout_marginVertical="@dimen/dimen_10"
                    android:layout_marginLeft="@dimen/dimen_20"
                    android:layout_marginRight="@dimen/dimen_5"
                    android:src="@drawable/ic_like" />

                <TextView
                    android:id="@+id/tv_row_advertise_like_count"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:layout_marginHorizontal="@dimen/dimen_5"
                    android:text="3"
                    android:textColor="@color/colorBlack"
                    android:textSize="@dimen/text_12" />

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:gravity="right"
                    android:orientation="horizontal">

                    <TextView
                        android:id="@+id/tv_row_advertise_comment_count"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center"
                        android:layout_marginHorizontal="@dimen/dimen_5"
                        android:gravity="right"
                        android:text="188"
                        android:textColor="@color/colorBlack"
                        android:textSize="@dimen/text_12" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center"
                        android:layout_marginHorizontal="@dimen/dimen_5"
                        android:gravity="left"
                        android:text="comments"
                        android:textColor="@color/colorBlack"
                        android:textSize="@dimen/text_12" />

                </LinearLayout>

            </LinearLayout>

            <View
                android:layout_width="match_parent"
                android:layout_height="@dimen/dimen_1"
                android:background="@color/colorDrawerBack" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <LinearLayout
                    android:id="@+id/linear_advertisement_like"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginVertical="@dimen/dimen_5"
                    android:layout_marginLeft="@dimen/dimen_20"
                    android:background="@drawable/ic_circleshape">

                    <ImageView
                        android:id="@+id/imageview_advertisement_like"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center"
                        android:layout_marginLeft="8dp"
                        android:src="@drawable/ic_likes" />
                </LinearLayout>

                <LinearLayout
                    android:id="@+id/linear_advertisement_comments"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginVertical="@dimen/dimen_5"
                    android:layout_marginLeft="@dimen/dimen_20"
                    android:background="@drawable/ic_circleshape">

                    <ImageView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center"
                        android:layout_marginLeft="8dp"
                        android:src="@drawable/ic_message" />
                </LinearLayout>

                <LinearLayout
                    android:id="@+id/linear_advertisement_share"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginVertical="@dimen/dimen_5"
                    android:layout_marginLeft="@dimen/dimen_20"
                    android:background="@drawable/ic_circleshape">

                    <ImageView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center"
                        android:layout_marginLeft="8dp"
                        android:src="@drawable/ic_share" />
                </LinearLayout>

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginVertical="@dimen/dimen_15"
                    android:layout_marginLeft="@dimen/dimen_20"
                    android:background="@drawable/ic_circleshape"
                    android:visibility="gone">

                    <ImageView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center"
                        android:layout_marginLeft="8dp"
                        android:src="@drawable/ic_document" />
                </LinearLayout>

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginVertical="@dimen/dimen_15"
                    android:layout_marginLeft="@dimen/dimen_20"
                    android:background="@drawable/ic_circleshape"
                    android:visibility="gone">

                    <ImageView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center"
                        android:layout_marginLeft="8dp"
                        android:src="@drawable/ic_bookmark" />
                </LinearLayout>

                <ImageView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:layout_marginHorizontal="@dimen/dimen_20"
                    android:src="@drawable/ic_more"
                    android:visibility="gone" />

            </LinearLayout>

        </LinearLayout>


    </android.support.v7.widget.CardView>


   <!-- <TextView
        android:layout_width="match_parent"
