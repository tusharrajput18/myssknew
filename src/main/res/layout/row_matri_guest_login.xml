<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@color/colorHind"
    android:orientation="vertical"
    android:padding="@dimen/dimen_10">

    <in.co.vsys.myssksamaj.custom_views.CustomTextViewHeading
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        
        android:gravity="center"
        android:text="Kindly Login or Register to view the profile"
        android:textColor="@color/colorBlack"
        android:textSize="@dimen/text_18"
        android:textStyle="bold" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/dimen_20"
        android:orientation="horizontal">

        <in.co.vsys.myssksamaj.custom_views.CustomButton
            android:id="@+id/row_btn_guestLogin"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            
            android:text="@string/login"
            android:textAllCaps="false"
            android:textColor="@color/colorHind"
            android:textSize="@dimen/text_18"
            app:backgroundTint="@color/controlColor" />

        <in.co.vsys.myssksamaj.custom_views.CustomButton
            android:id="@+id/row_btn_guestRegister"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            
            android:text="@string/register"
            android:textAllCaps="false"
            android:textColor="@color/colorHind"
            android:textSize="@dimen/text_18"
            app:backgroundTint="#29B6F6" />

    </LinearLayout>

</LinearLayout>